import subprocess

def run_script(script_path):
    try:
        result = subprocess.run([script_path], stdout=subprocess.PIPE, stderr=subprocess.PIPE, text=True, check=True)
        print(result.stdout)
    except subprocess.CalledProcessError as e:
        print(f"Error running script {script_path}: {e.stderr}")

if __name__ == "__main__":
    print("Disk Space Information:")
    run_script('./DiskSpace.sh')
    print("\nNetwork Traffic Information:")
    run_script('./NetworkTraffic.sh')
